<ul data-role="listview">
  <li data-role="list-divider">Pending</li>
  {{#pending}}<li>{{status}} {{type}} - {{name}}</li>{{/pending}}
  {{^pending}}<li>No items pending transmission to server</li>{{/pending}}

  <li data-role="list-divider">Draft</li>
  {{#draft}}<li><a interaction="TESTFORM_EDIT" _id="{{_id}}">{{status}} {{type}} - {{name}}</a></li>{{/draft}}
  {{^draft}}No items saved as draft.{{/draft}}
</ul>